@page "/"
@using System.Reflection;

<PageTitle>Main</PageTitle>

<MudPaper Class="pa-3">
    <MudText Typo="Typo.h4">Main Dashboard</MudText>
    <MudDivider DividerType="DividerType.Middle" Class="my-2" />
    <MudText Typo="Typo.h6"><code>Blazor Webassembly 7.0.4 | .NET 7.0. | App v:@version </code> </MudText>
    <MudText Typo="Typo.body1">
        This site is a static Blazor Webassembly web app.
        <br />
        Therefore, when navigating between pages you will lose all states in your current page.
        <br />
        Except for the API page, where some of the data will persist as we save it in browser storage, however the page will still be reloaded.
    </MudText>
</MudPaper>


@code {
    string version;
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        version = Assembly.GetEntryAssembly()!.GetName().Version!.ToString();
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);
    }
}